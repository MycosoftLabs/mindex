# =============================================================================
# MINDEX - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in real values.
# NEVER commit .env to git. Only .env.example should be in version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
MINDEX_DB_HOST=192.168.0.189
MINDEX_DB_PORT=5432
MINDEX_DB_USER=mindex
MINDEX_DB_PASSWORD=change-me
MINDEX_DB_NAME=mindex

# -----------------------------------------------------------------------------
# API Server
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# API Keys (protected endpoints)
# -----------------------------------------------------------------------------
# You can provide a single key or a JSON list.
# MINDEX accepts: MINDEX_API_KEY / MINDEX_API_KEYS / API_KEYS
MINDEX_API_KEY=your-service-api-key

# -----------------------------------------------------------------------------
# CORS (optional)
# -----------------------------------------------------------------------------
# JSON list recommended: ["http://localhost:3010","https://sandbox.mycosoft.com"]
API_CORS_ORIGINS=[]

# Database
MINDEX_DB_HOST=localhost
MINDEX_DB_PORT=5432
MINDEX_DB_USER=mindex
MINDEX_DB_PASSWORD=mindex
MINDEX_DB_NAME=mindex

# API
API_HOST=0.0.0.0
API_PORT=8000
API_LOG_LEVEL=info
API_CORS_ORIGINS=http://localhost:3000,http://localhost:5173
API_KEYS=["dev-local-key"]

# Integrations
HYPERGRAPH_ENDPOINT=https://hypergraph-node.example
BITCOIN_ORDINAL_ENDPOINT=https://ordinals-node.example
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
